<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="480.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.scenebuilderdemo.MainMenuController">
   <children>
      <!-- Ensure ImageView is first and set to mouseTransparent -->
      <ImageView fitHeight="480.0" fitWidth="640.0" mouseTransparent="true" pickOnBounds="true" preserveRatio="true">
         <image>
            <!-- Correct the image path to be relative to classpath -->
            <Image url="@../../../BackGroundAfrica.png" />
         </image>
      </ImageView>

      <Button fx:id="startButton" layoutX="46.0" layoutY="256.0" mnemonicParsing="false" prefHeight="40.0" prefWidth="160.0" text="Start">
         <font>
            <Font name="Open Sans Semibold" size="20.0" />
         </font>
      </Button>
      <Label fx:id="titleLabel" layoutX="50" layoutY="20" prefHeight="50" prefWidth="500" text="Hydro Heroes: The Quest for Clean Water">
         <font>
            <Font name="Arial Bold" size="24" />
         </font>
         <textFill>
            <Color fx:value="#FFFFFF" />
         </textFill>
         <effect>
            <DropShadow color="#000000" offsetX="2" offsetY="2" radius="3.0" />
         </effect>
      </Label>
      <Button fx:id="helpButton" layoutX="46.0" layoutY="319.0" mnemonicParsing="false" prefHeight="40.0" prefWidth="160.0" text="Help">
         <font>
            <Font name="Open Sans Semibold" size="20.0" />
         </font>
      </Button>
      <Button fx:id="quitButton" layoutX="46.0" layoutY="381.0" mnemonicParsing="false" prefHeight="40.0" prefWidth="160.0" text="Quit">
         <font>
            <Font name="Open Sans Semibold" size="20.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
